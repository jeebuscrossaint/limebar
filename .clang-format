---
BasedOnStyle: Google

# Indentation
UseTab: ForIndentation      # Use tabs for indentation (OpenBSD standard)
IndentWidth: 8              # Tabs are 8 spaces wide
TabWidth: 8                 # Set tab size to 8 spaces
ContinuationIndentWidth: 8  # Align continued lines with the 8-space tab width

# Braces
BreakBeforeBraces: Attach   # Place opening braces on the same line
AllowShortIfStatementsOnASingleLine: false # Don't allow short if statements on one line

# Line Length
ColumnLimit: 80             # Limit line length to 80 characters

# Pointer and Reference Alignment
PointerAlignment: Right     # Align * and & to the right (next to the variable)

# Spaces
SpaceBeforeParens: ControlStatements  # Space before parentheses in control statements only
SpaceAfterCStyleCast: true            # Add space after C-style casts
SpaceBeforeCpp11BracedList: false     # No space before C++11 braced lists

# Includes
IncludeBlocks: Preserve               # Keep include blocks as-is
SortIncludes: false                   # Do not sort includes (OpenBSD prefers manually ordered includes)

# Function Declarations
AllowShortFunctionsOnASingleLine: None # Do not allow short functions on a single line

# Comments
CommentPragmas: '^TODO:'              # Highlight TODO comments

# Namespace formatting
NamespaceIndentation: None            # Do not indent inside namespaces

# Misc
IndentCaseLabels: false               # Do not indent case labels in switch statements
FixNamespaceComments: false           # No namespace end comments
AllowShortEnumsOnASingleLine: false   # Do not allow short enums on a single line
SpacesInAngles: false                 # No spaces inside template angle brackets
SpaceBeforeSquareBrackets: false      # No space before square brackets
Casts: Space                          # Space after casts (OpenBSD prefers clarity)
